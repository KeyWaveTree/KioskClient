<Window x:Class="KioskClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KioskClient"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        mc:Ignorable="d" WindowStyle="None"
        Title="MainWindow" Height="450" Width="800" Background="{x:Null}">
    <Grid>
        <ContentControl x:Name="Page" Content="{Binding CurrentViewModel}"/>
        <ContentControl x:Name="Popup" Content="{Binding PopViewModel}" d:IsHidden ="True"/>
    </Grid>
</Window>
