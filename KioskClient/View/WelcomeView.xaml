<UserControl x:Class="KioskClient.View.WelcomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:KioskClient.Converters"
             xmlns:vm="clr-namespace:KioskClient.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             d:DataContext="{d:DesignInstance Type=vm:WelcomeViewModel, IsDesignTimeCreatable=False}">

    <UserControl.Resources>
    </UserControl.Resources>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Background="{Binding Source={StaticResource Locator}, Path=Main.ThemeViewModel.ThemeConfig.GlassBrush}"
                    BorderBrush="{Binding Source={StaticResource Locator}, Path=Main.ThemeViewModel.ThemeConfig.GlassBorderBrush}"
                    BorderThickness="1" CornerRadius="24" Padding="48" Margin="0,0,0,40">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="20" ShadowDepth="5" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel>
                    <TextBlock Text="화면을 터치하여 시작하세요" 
                               Foreground="{Binding Source={StaticResource Locator}, Path=Main.ThemeViewModel.ThemeConfig.TextPrimaryBrush}" 
                               FontSize="32" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Touch the screen to get started" 
                               Foreground="{Binding Source={StaticResource Locator}, Path=Main.ThemeViewModel.ThemeConfig.TextSecondaryBrush}" 
                               FontSize="18" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <ItemsControl ItemsSource="{Binding Categories}" MaxWidth="900">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="2"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource GlassButtonStyle}" Margin="12" Height="250"
                                Command="{Binding DataContext.SelectCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}"
                                Padding="32">
                            <StackPanel>
                                <Border Width="80" Height="80" CornerRadius="16" Margin="0,0,0,16">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FCD34D" Offset="0.0"/>
                                            <GradientStop Color="#F97316" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="{Binding IconName, Converter={StaticResource IconConverter}}" 
                                               FontSize="40" Foreground="White"
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="{Binding NameKo}" 
                                           Foreground="{Binding Source={StaticResource Locator}, Path=Main.ThemeViewModel.ThemeConfig.TextPrimaryBrush}" 
                                           FontSize="24" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="{Binding Source={StaticResource Locator}, Path=Main.ThemeViewModel.ThemeConfig.TextSecondaryBrush}" 
                                           FontSize="14" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>